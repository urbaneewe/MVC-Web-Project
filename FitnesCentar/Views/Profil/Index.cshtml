@using FitnesCentar.Models
@{
    ViewBag.Title = "Home";
    Layout = null;
}

<!DOCTYPE html>

@{
    Korisnik korisnik = (Korisnik)HttpContext.Current.Session["korisnik"];
}

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/flexboxgrid.css" />
    <link rel="stylesheet" href="~/Content/style.css">
</head>


<body>

    <!-- MENI -->
    @{
        if (korisnik == null)
        {
            <header id="main-header">
                <div class="container">
                    <div class="row center-xs middle-xs middle-sm middle-md middle-lg">
                        <div class="start-sm start-md start-lg col-xs-12 col-sm-4 col-md-4 col-lg-4">
                            <h1><span class="primary-text">Sipka</span>Terapija</h1>
                        </div>
                        <div class="end-sm end-md end-lg col-xs-12 col-sm-8 col-md-8 col-lg-8">
                            <nav id="navbar">
                                <ul>
                                    <li class="active"><a href="~/Home/Index">Home</a></li>
                                    <li><a href="~/Login/Index">Prijava</a></li>
                                    <li><a href="~/Register/Index">Registracija</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </header>
        }

        else if (korisnik != null && korisnik.uloga.Equals(Uloga.POSETILAC))
        {
            <header id="main-header">
                <div class="container">
                    <div class="row center-xs middle-xs middle-sm middle-md middle-lg">
                        <div class="start-sm start-md start-lg col-xs-12 col-sm-4 col-md-4 col-lg-4">
                            <h1><span class="primary-text">Sipka</span>Terapija</h1>
                        </div>
                        <div class="end-sm end-md end-lg col-xs-12 col-sm-8 col-md-8 col-lg-8">
                            <nav id="navbar">
                                <ul>
                                    <li><a href="~/Home/Index">Home</a></li>
                                    <li class="active"><a href="~/Profil/Index">Profil</a></li>
                                    <li><a href="~/Login/Odjava">Odjava</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </header>
        }

        else if (korisnik != null && korisnik.uloga.Equals(Uloga.TRENER))
        {
            <header id="main-header">
                <div class="container">
                    <div class="row center-xs middle-xs middle-sm middle-md middle-lg">
                        <div class="start-sm start-md start-lg col-xs-12 col-sm-2 col-md-2 col-lg-2">
                            <h1><span class="primary-text">Sipka</span>Terapija</h1>
                        </div>
                        <div class="end-sm end-md end-lg col-xs-12 col-sm-10 col-md-10 col-lg-10">
                            <nav id="navbar">
                                <ul>
                                    <li><a href="~/Home/Index">Home</a></li>
                                    <li><a href="~/Treninzi/Index">Treninzi</a></li>
                                    <li><a href="~/Istorija/Index">Prethodni treninzi</a></li>
                                    <li><a href="~/Trener/Index">Kreriraj trening</a></li>
                                    <li class="active"><a href="~/Profil/Index">Profil</a></li>
                                    <li><a href="~/Login/Odjava">Odjava</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </header>
        }

        else if (korisnik != null && korisnik.uloga.Equals(Uloga.VLASNIK))
        {
            <header id="main-header">
                <div class="container">
                    <div class="row center-xs middle-xs middle-sm middle-md middle-lg">
                        <div class="start-sm start-md start-lg col-xs-12 col-sm-2 col-md-2 col-lg-2">
                            <h1><span class="primary-text">Sipka</span>Terapija</h1>
                        </div>
                        <div class="end-sm end-md end-lg col-xs-12 col-sm-10 col-md-10 col-lg-10">
                            <nav id="navbar">
                                <ul>
                                    <li><a href="~/Home/Index">Home</a></li>
                                    <li><a href="~/RegTrener/Index">Registruj trenera</a></li>
                                    <li><a href="~/Centri/Index"></a>Centri</li>
                                    <li class="active"><a href="~/Profil/Index">Profil</a></li>
                                    <li><a href="~/Login/Odjava">Odjava</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </header>
        }
    }

    <!-- MENI -->
    <!--SLIKA-->

    <section id="showcase">
        <div class="container">
            <div class="row center-xs center-sm center-md center-lg middle-sm">
                <div class="col-xs-12 col-sm-10 col-md-10 col- col-lg-9 showcase-content">
                    <h1>Pobedite svoje demone</h1>
                    <p style="color:white; font-size:25px; margin-top:10px">Klikom do pobede</p>
                </div>
            </div>
        </div>
    </section>

    <!--SLIKA-->
    <!--IZMENA-->
    <section id="offers">
        <div class="container">
            <div class="row center-xs center-sm center-md center-md">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <h2>Podešavanja profila</h2>
                    <p>Izmenite Vaše podatke u samo par klikova</p>
                    <div class="row center-xs center-sm center-md center-md">
                        <form action="~/Profil/Azuriranje" method="post" style="margin-top:20px; margin-bottom:20px">
                            <input type="text" name="username" value="@korisnik.username" required hidden>
                            <input type="password" name="lozinka" value="@korisnik.lozinka" required hidden>
                            <br>
                            <input type="text" name="ime" value="@korisnik.ime" required>
                            <input type="text" name="prezime" value="@korisnik.prezime" required>
                            <br>
                            <input list="opredeljenje" name="pol" value="@korisnik.pol.ToString()" style="text-align:center" required>
                            <datalist id="opredeljenje">
                                <option value="MUSKI"></option>
                                <option value="ZENSKI"></option>
                                <option value="DRUGO"></option>
                            </datalist>
                            <input type="email" name="email" value="@korisnik.email" required>
                            <br>
                            <input type="date" name="datumRodjenja" value="@korisnik.datumRodjenja.ToString("yyyy-MM-dd")" style="width:262px; text-align:center" required>
                            @if (korisnik.uloga.Equals(Uloga.POSETILAC))
                            {
                                <input type="text" name="uloga" value="POSETILAC" hidden>
                            }
                            else if (korisnik.uloga.Equals(Uloga.TRENER))
                            {
                                <input type="text" name="uloga" value="TRENER" hidden>
                            }
                            else
                            {
                                <input type="text" name="uloga" value="VLASNIK" hidden>
                            }
                            <input type="submit" value="Izmeni"
                                   style="
                                        color:darkred;
                                        padding:10px;
                                        border:0px;
                                        width:267px;
                                        height:34px;
                                        text-align:center;
                                        margin-bottom:30px;">
                        </form>
                    </div>
                    <h4 style="margin-bottom:20px; color:#7BA17D">@ViewBag.Poruka</h4>
                </div>
            </div>
        </div>
    </section>
    <!-- FOOTER -->
    <footer id="main-footer">
        <div class="container">
            <div class="row center-xs center-sm center-md center-lg">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <p>Copyright &copy; 2022 | SipkaTerapija</p>
                </div>
            </div>
        </div>
    </footer>
    <!-- FOOTER -->

</body>

</html>